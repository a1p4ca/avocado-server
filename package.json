    "serve": "yarn clear && node dist/index.js"
  },
  "dependencies": {
    "apollo-server": "^2.0.0",
    "graphql": "^0.13.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-import-graphql": "^2.6.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "nodemon": "^1.18.3",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1"
  },
  "standard": {
    "ignore": [
      "/dist/"
    ]
  }
}
