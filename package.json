{
  "name": "avocado-server",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/a1p4ca/avocado-server",
  "author": "a1p4ca <dev.alpaca@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "standard",
    "start": "nodemon src/index.js --exec babel-node && yarn clear",
    "clear": "rimraf ./node_modules/.cache/babel-loader",
